<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wnd.myapp.lenovate.Settings">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="General"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="logout"
            android:paddingLeft="5dp"
            android:outlineProvider="bounds"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Logout"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Logout from WoodNdecor"
                android:paddingLeft="2dp"
                android:fontFamily="sans-serif"
                android:textColor="#8b8b8b"
                android:id="@+id/textView17"
                android:layout_marginBottom="6dp"
                android:paddingBottom="10dp"
                android:background="@drawable/under_line"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="shaer"

            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:showDividers="end">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:text="Share"
                android:paddingTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Enjoy it ? Share this App!"
                android:paddingLeft="2dp"
                android:textColor="#8b8b8b"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="6dp"
                android:paddingBottom="8dp"
                android:background="@drawable/under_line"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Other"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="privac"

            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Privacy Policy"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Click To View Privacy Policy"
                android:paddingLeft="2dp"
                android:textColor="#8b8b8b"
                android:id="@+id/textView5"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp"
                android:background="@drawable/under_line"
                />

        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="tos"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Terms and Condition"
                android:paddingTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Click To View Terms and Conditions"
                android:textColor="#8b8b8b"
                android:id="@+id/textView29"
                android:paddingLeft="2dp"
                android:paddingBottom="8dp"
                android:background="@drawable/under_line"
                />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
